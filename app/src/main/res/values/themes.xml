<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FireNews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/firebase_amber</item>
        <item name="colorPrimaryVariant">@color/firebase_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/firebase_yellow</item>
        <item name="colorSecondaryVariant">@color/firebase_coral</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="OrangeBack" parent="Theme.FireNews">
        <item name="android:windowBackground">@drawable/rectangle</item>
    </style>
</resources>